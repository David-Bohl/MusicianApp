<div class="container">
  <div class="row">
    <div class="col-lg-8 panel panel-default" style="min-height: 200px;">
      <h5>global controls</h5>
      <br>
      <span id = "output"></span>
      <!-- <button id = "start_stop_btn" type = "button" class = "btn btn-success">Start/Stop</button> -->
      <br>
      <div id = "slider">
        <div id = "tempodisplay"></div>
      </div>
      <br>
      <br>
      <div id = "button"></div>
    </div>
    <div class="col-lg-4 well" style="min-height: 200px;">
      chat area
      <p id = "list"></p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4 well" style="min-height: 437px;">
      <h4> synth controls </h4>
      <div> volume </div>
      <div id="synth-vol"></div>
      <div> echo mix </div>
      <div id="echo"></div>
      <div id="oscilloscope"></div>
      <br>
      <input id = "synth_pattern_title" type = "text" name = "title" placeholder = "Title"/>
      <input id = "synth_pattern_description" type = "text" name = "description" placeholder = "Description"/>
      <div id = "patternSelection">
        <input id = "synth_pattern0" name = "synth_pattern" type = "radio" checked/>

        <input id = "synth_pattern1" name = "synth_pattern" type = "radio" />

        <input id = "synth_pattern2" name = "synth_pattern" type = "radio" />

        <input id = "synth_pattern3" name = "synth_pattern" type = "radio" />
      </div>

      {{#if cur_user}}
        {{#each patterns}}
          <input id = "synth_patternId{{@index}}" name = "synth_patternId" type = "hidden" value = "{{this.id}}"/>
        {{/each}}
          <div id = "synth_save"></div>
      {{/if}}

    </div>
    <div class="col-lg-8 panel panel-default">
      <h2>Synth</h2>
      <div id = "steppers">
        <div id="SO" class="step"></div>
        <div id="S1" class="step"></div>
        <div id="S2" class="step"></div>
        <div id="S3" class="step"></div>
        <div id="S4" class="step"></div>
        <div id="S5" class="step"></div>
        <div id="S6" class="step"></div>
        <div id="S7" class="step"></div>
        <div id="S8" class="step"></div>
        <div id="S9" class="step"></div>
        <div id="S10" class="step"></div>
        <div id="S11" class="step"></div>
        <div id="S12" class="step"></div>
        <div id="S13" class="step"></div>
        <div id="S14" class="step"></div>
        <div id="S15" class="step"></div>
      </div>
      <div id = "synth"></div>
      <span style="margin-left:14px; word-spacing:24.5px;">01 02 03 04 05 06 07 08 09 10 11 12 13 14 15 16</span>
      <br>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4 well" style="min-height: 261px;">
      drum controls
      <br>
      <input id = "beat_title" type = "text" name = "title" placeholder = "Title"/>
      <input id = "beat_description" type = "text" name = "description" placeholder = "Description"/>
      <div id = "beatSelection">
        <input id = "beat0" name = "beat" type = "radio" checked/>

        <input id = "beat1" name = "beat" type = "radio" />

        <input id = "beat2" name = "beat" type = "radio" />

        <input id = "beat3" name = "beat" type = "radio" />
      </div>

        {{#if cur_user }}
          {{#each beats}}
            <input id = "beatId{{@index}}" name = "beatId" type = "hidden" value = "{{this.id}}"/>
          {{/each}}
            <div id = "drums_save"></div>
        {{/if}}

    </div>
    <div class="col-lg-8 panel panel-default">
      <h2>Drums</h2>
      <div id = "steppers">
        <div id="DO" class="step"></div>
        <div id="D1" class="step"></div>
        <div id="D2" class="step"></div>
        <div id="D3" class="step"></div>
        <div id="D4" class="step"></div>
        <div id="D5" class="step"></div>
        <div id="D6" class="step"></div>
        <div id="D7" class="step"></div>
        <div id="D8" class="step"></div>
        <div id="D9" class="step"></div>
        <div id="D10" class="step"></div>
        <div id="D11" class="step"></div>
        <div id="D12" class="step"></div>
        <div id="D13" class="step"></div>
        <div id="D14" class="step"></div>
        <div id="D15" class="step"></div>
      </div>
      <div id = "drums"></div>
      <strong style="margin-left:14px; word-spacing:24.5px; ">01</strong>
      <span style="margin-left:24.5px; word-spacing:24.5px;">02 03 04</span>
      <strong style="margin-left:24.5px; word-spacing:24.5px; ">05</strong>
      <span style="margin-left:24.5px; word-spacing:24.5px;">06 07 08</span>
      <strong style="margin-left:24.5px; word-spacing:24.5px; ">09</strong>
      <span style="margin-left:24.5px; word-spacing:24.5px;">10 11 12</span>
      <strong style="margin-left:24.5px; word-spacing:24.5px; ">13</strong>
      <span style="margin-left:24.5px; word-spacing:24.5px;">14 15 16</span>
      <br>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

      <br>

      <br>


      <br>

    </div>
  </div>
</div>
